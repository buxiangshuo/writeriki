<h3 class="title-border-left">
    All Events
</h3>

<div class="btn-group pull-right" style="margin-top: -46px;">
    <button class="btn">排序</button>
    <button class="btn dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li class="divider"></li>
      <li>
        <a href="">从最新排序</a>
      </li>
      <li>
        <a href="">从旧时排序</a>
      </li>
      <li class="divider"></li>
    </ul>
  </div>

  <hr>

<table class="table table-bordered table-hover">
  <tr>
    <th class="span4 table-mimi">名称</th>
    <th class="span1 table-mimi">事务等级</th>
    <th class="span1 table-mimi">起始时间</th>
    <th class="span1 table-mimi">结束时间</th>
    <th class="table-mimi" style="width:20px;">完成者</th>
    <th class="table-mimi" style="width:20px;">发起者</th>
  </tr>


<% @events.each do |event| %>
  <tr>
    <td class="table-mimi"><%= link_to event.name, event %></td>
    <td class="table-mimi"><%= event.level %></td>
    <td class="table-mimi"><%= event.start_at.strftime("%Y-%m-%d") %></td>
    <td class="table-mimi"><%= event.end_at.strftime("%Y-%m-%d") %></td>

  <!---- list event.appoinment username ---->
    <% @users = User.all %>
    <% @users.each do |u| %>
      <% if event.appointment.to_s == u.id.to_s %>
        <td class="table-mimi">
          <a href="" title=<%= u.username %> rel="tooltip" data-placement="left">
            <%= image_tag u.avatar.url(:thumb), class:"table-avatar" %>
          </a>
        </td>
      <% end %>
    <% end %>
    
  <!---- list event cteator username ---->
    <% @users.each do |i| %>
      <% if event.user_id == i.id %>
        <td class="table-mimi">
          <a href="" title=<%= i.username %> rel="tooltip" data-placement="right">
            <%= image_tag i.avatar.url(:thumb), class:"table-avatar" %>
          </a>
        </td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<hr>

<%= link_to 'New Event', new_event_path, class:"btn btn-danger" %>

<script type="text/javascript">
  $(document).ready(function () {
    $("a[rel='tooltip']").tooltip();
  });
</script>
