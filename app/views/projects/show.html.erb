<p>
  <b>项目名称:</b>
  <%= @project.name %>
</p>

<p>
  <b>项目描述:</b>
  <%=raw @project.description %>
</p>

<p>
  <b>起始时间:</b>
  <%= @project.start_at.strftime("%Y-%m-%d") %>
</p>

<p>
  <b>结束时间:</b>
  <%= @project.end_at.strftime("%Y-%m-%d") %>
</p>

<% if @project.user_id == current_user.id %>
    <%= link_to '编辑', edit_project_path(@project) %>
    <%= link_to '删除', project_path, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
<% elsif Duty.find_all_by_user_id_and_project_id(current_user.id,@project.id).present?  %>
    <%= link_to '退出项目', quit_project_path, :class => 'btn btn-danger' %>
<% else %>
    <%= link_to '加入项目', join_project_path, :class => 'btn btn-success' %>
<% end %>

<%= link_to '返回', projects_path %>

<hr>

<!-- 在此项目下的所有文档 -->
<% @project.docs.each do |doc| %>
    <tr>
      <td class="span3"><%= link_to doc.title, doc %></td>
      <td><%= doc.content %></td>
      <td class="span3"><%= doc.keyword %></td>
    </tr>
<% end %>
<hr>

<!-- 在此项目下的所有事务 -->
<% @project.events.each do |event| %>

<% end %>
<hr>

<!-- 在此项目下的所有讨论 -->
<% @project.discusses.each do |discuss| %>

<% end %>
