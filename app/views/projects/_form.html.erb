<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label '项目名称', class:"control-label" %>
      <div class="controls">
        <%= f.text_field :name, class:'span4' %>
      </div>
  </div>

  <div class="control-group">
    <%= f.label '起始时间', class:"control-label" %>
      <div class="controls">
        <%= f.text_field :start_at, 'data-behaviour' => 'datepicker', class:"span4" %>
      </div>
  </div>

  <div class="control-group">
      <%= f.label '结束时间', class:"control-label" %>
        <div class="controls">
          <%= f.text_field :end_at, 'data-behaviour' => 'datepicker', class:"span4" %>
        </div>
  </div>

  <div class="control-group">
    <%= f.label '项目描述',class:'control-label' %>
    <div class="controls">
      <%= f.text_area :description, class:'wysihtml5',:style => 'width:570px; height:200px;' %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit '创建项目', class:'btn btn-danger' %>
    </div>
  </div>
<% end %>

<!--时间选择-->
<script type="text/javascript">
    $(document).on("focus", "[data-behaviour~='datepicker']", function(e){
        $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true})
    });
</script>

