<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @doc.title %>
</p>

<p>
  <b>Content:</b>
  <%= @doc.content %>
</p>

<p>
  <b>Keyword:</b>
  <%= @doc.keyword %>
</p>


<%= link_to 'Edit', edit_doc_path(@doc) %> |
<%= link_to 'Back', docs_path %>

<ul id="comments">
  <% @doc.comments.each do |comment| %>
      <li><%= comment.content %></li>
  <% end %>
</ul>

<h2>New Comment</h2>
<%= form_for [@doc, Comment.new] do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :rows => 5 %>
    </div>
    <div class="actions">
      <%= f.submit "Add comment",:class => 'btn' %>
    </div>
<% end %>