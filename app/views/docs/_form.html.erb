<%= form_for(@doc) do |f| %>
  <% if @doc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@doc.errors.count, "error") %> prohibited this doc from being saved:</h2>

      <ul>
      <% @doc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :project_name %>
    <% projects_array = Project.all.map { |project| [project.name, project.id] } %>
    <%= f.select :project_id, options_for_select(projects_array) %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, class:'wysihtml5',:style => 'width:570px; height:100px;' %>
  </div>
  <div class="field">
    <%= f.label :keyword %>
    <%= f.text_field :keyword %>
  </div>
  <div class="actions">
    <%= f.submit(:class => 'btn btn-info') %>
  </div>
<% end %>

